<%-include('includes/navigation.ejs')%>


    <div class="signup-box box">
        <div class="signup-title title">
            <h4>Ingresa la informacion del nuevo usuario</h4>
        </div>

        <% if(typeof error !=='undefined' ){ %>
            <div class="alert">
                <p class="error">
                    <%= error %>
                </p>
            </div>
            <% } %>

                <form action="/users/signup" method="post">
                    <div class="credential-input">
                        <label for="name">Nombre:</label>
                        <input type="text" name="name" id="username" placeholder="Ingresa tu nombre">
                    </div>

                    <div class="credential-input">
                        <label for="email">Correo electronico:</label>
                        <input type="email" name="email" id="email" placeholder="Ingresa tu correo electronico">
                    </div>

                    <div class="credential-input">
                        <label for="name">Contrasena:</label>
                        <input type="password" name="password" id="password" placeholder="Ingresa tu contrasena">
                    </div>

                    <div class="ingresarBtn">
                        <button type="submit" class="ingresar-btn">Crear Usuario</button>
                    </div>
                </form>
    </div>


<%-include('includes/footer.ejs')%>